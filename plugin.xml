<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="secomm-plugin-account"
    version="0.1.0">
    <name>seComm Account Cordova Plugin</name>
    <description>Cordova plugin for managing seComm accounts</description>
    <license>GPL3</license>
    <keywords>secomm,account,cordova,plugin</keywords>
    <repo>https://github.com/swbrenneis/cordova-plugin-secomm-account.git</repo>
    <issue>https://github.com/swbrenneis/cordova-plugin-secomm-account/issues</issue>

    <!-- android -->
    <platform name="android">
      <js-module src="www/plugin.js" name="plugin">
        <runs/>

        <!-- This is the window variable name you want, like window.SeAccountPlugin -->
        <clobbers target="SeAccountPlugin" />
      </js-module>
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="SeAccountPlugin">
          <param name="android-package" value="org.secomm.plugins.cordova.SeAccountPlugin" />
          <param name="onload" value="true" />
        </feature>
      </config-file>

      <source-file src="src/android/org/secomm/plugins/cordova/SeAccountPlugin.java" target-dir="src/org/secomm/plugins/cordova" />
      <source-file src="src/android/org/secomm/plugins/cordova/FunctionFactory.java" target-dir="src/org/secomm/plugins/cordova" />
      <source-file src="src/android/org/secomm/plugins/cordova/PluginFunction.java" target-dir="src/org/secomm/plugins/cordova" />
      <source-file src="src/android/org/secomm/plugins/cordova/PluginFunctionFactory.java" target-dir="src/org/secomm/plugins/cordova" />
      <source-file src="src/android/org/secomm/plugins/cordova/CreateVaultFunction.java" target-dir="src/org/secomm/plugins/cordova" />
      <source-file src="src/android/org/secomm/plugins/cordova/ClientVault.java" target-dir="src/org/secomm/plugins/cordova" />
      <source-file src="src/android/org/secomm/plugins/cordova/VaultException.java" target-dir="src/org/secomm/plugins/cordova" />
      <source-file src="src/android/org/secomm/plugins/cordova/ParameterGenerator.java" target-dir="src/org/secomm/plugins/cordova" />
      <source-file src="src/android/org/secomm/plugins/cordova/SessionState.java" target-dir="src/org/secomm/plugins/cordova" />
      <source-file src="src/android/libs/CryptoKitty.jar" target-dir="libs" />
    </platform>

    <!-- ios -->
    <platform name="ios">
        <js-module src="www/plugin.js" name="plugin">
            <runs/>
            <clobbers target="SeAccountPlugin" />
        </js-module>
        <config-file target="config.xml" parent="/*">
            <feature name="SeAccountPlugin">
                <param name="ios-package" value="SeAccountPlugin" onload="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/SeAccountPlugin.h" />
        <source-file src="src/ios/SeAccountPlugin.mm" />
    </platform>
</plugin>
